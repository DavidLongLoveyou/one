# ==================================
# THE GREAT BEANS - Frontend Environment Variables
# ==================================
# IMPORTANT: Copy this file to .env.local before starting Next.js
# cp env.local.example .env.local

# ----------------------------------
# Strapi API Configuration (REQUIRED)
# ----------------------------------
# Local development: http://localhost:1337
# Production: Your Strapi backend URL
NEXT_PUBLIC_API_URL=http://localhost:1337

# Optional: API token for accessing protected content
# Generate in Strapi: Settings > API Tokens > Create new API Token
# Type: Read-only, Full access
STRAPI_API_TOKEN=your_readonly_api_token_here

# ----------------------------------
# Site Configuration (REQUIRED)
# ----------------------------------
# Local development
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Production: Your domain
# NEXT_PUBLIC_SITE_URL=https://thegreatbeans.com

# ----------------------------------
# Analytics (Production only)
# ----------------------------------
# Google Analytics 4
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Google Tag Manager
# NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# ----------------------------------
# SEO & Social (Optional)
# ----------------------------------
# Default OG image if not specified in CMS
# NEXT_PUBLIC_DEFAULT_OG_IMAGE=/og-image.jpg

# ----------------------------------
# Feature Flags (Optional)
# ----------------------------------
# Enable/disable features
# NEXT_PUBLIC_ENABLE_SEARCH=true
# NEXT_PUBLIC_ENABLE_NEWSLETTER=true
# NEXT_PUBLIC_MAINTENANCE_MODE=false

# ----------------------------------
# Performance Monitoring (Optional)
# ----------------------------------
# Sentry DSN for error tracking
# NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# LogRocket for session replay
# NEXT_PUBLIC_LOGROCKET_ID=xxxxx/thegreatbeans

# ----------------------------------
# Third-party Services (Optional)
# ----------------------------------
# reCAPTCHA for form protection
# NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_site_key

# Intercom for customer support
# NEXT_PUBLIC_INTERCOM_APP_ID=your_app_id

# ----------------------------------
# Development Only
# ----------------------------------
# Enable Next.js debugging
# DEBUG=*

# Analyze bundle size
# ANALYZE=true




