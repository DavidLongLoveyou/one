{
  "kind": "collectionType",
  "collectionName": "services",
  "info": {
    "singularName": "service",
    "pluralName": "services",
    "displayName": "Service",
    "description": "B2B services offered"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 200
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "tagline": {
      "type": "string",
      "maxLength": 150
    },
    "overview": {
      "type": "richtext",
      "required": true
    },
    "hero_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "process_steps": {
      "type": "component",
      "repeatable": true,
      "component": "service.process-step"
    },
    "capabilities": {
      "type": "component",
      "repeatable": true,
      "component": "service.capability"
    },
    "case_studies": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::testimonial.testimonial"
    },
    "faq_items": {
      "type": "component",
      "repeatable": true,
      "component": "shared.faq-item"
    },
    "related_products": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product.product"
    },
    "primary_cta": {
      "type": "component",
      "component": "shared.button"
    },
    "seo": {
      "type": "component",
      "component": "seo.metadata",
      "required": false
    }
  }
}

