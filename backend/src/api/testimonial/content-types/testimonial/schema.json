{
  "kind": "collectionType",
  "collectionName": "testimonials",
  "info": {
    "singularName": "testimonial",
    "pluralName": "testimonials",
    "displayName": "Testimonial",
    "description": "Client testimonials"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "quote": {
      "type": "text",
      "required": true,
      "maxLength": 1000
    },
    "reviewer_name": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "reviewer_title": {
      "type": "string",
      "maxLength": 100
    },
    "reviewer_company": {
      "type": "string",
      "maxLength": 100
    },
    "reviewer_avatar": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "company_logo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "rating": {
      "type": "integer",
      "min": 1,
      "max": 5
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "review_date": {
      "type": "date"
    }
  }
}

