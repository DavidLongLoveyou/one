    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "title": {
      "type": "string",
      "maxLength": 100
    },
    "bio": {
      "type": "text",
      "maxLength": 500
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "email": {
      "type": "email"
    },
    "social_links": {
      "type": "json"
    }
  }
}

