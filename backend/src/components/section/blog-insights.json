{
  "collectionName": "components_section_blog_insightss",
  "info": {
    "displayName": "Blog Insights",
    "description": "Knowledge assets/blog posts section"
  },
  "options": {},
  "attributes": {
    "headline": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "subheadline": {
      "type": "text",
      "maxLength": 250
    },
    "knowledge_assets": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::knowledge-asset.knowledge-asset"
    },
    "max_posts": {
      "type": "enumeration",
      "enum": ["3", "6"],
      "default": "3"
    },
    "layout": {
      "type": "enumeration",
      "enum": ["grid", "featured-left", "carousel"],
      "default": "grid"
    },
    "show_author": {
      "type": "boolean",
      "default": true
    },
    "show_read_time": {
      "type": "boolean",
      "default": true
    },
    "show_excerpt": {
      "type": "boolean",
      "default": true
    }
  }
}

