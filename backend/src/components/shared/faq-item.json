{
  "collectionName": "components_shared_faq_items",
  "info": {
    "displayName": "FAQ Item",
    "description": "Reusable FAQ question and answer component"
  },
  "options": {},
  "attributes": {
    "question": {
      "type": "string",
      "required": true,
      "maxLength": 200
    },
    "answer": {
      "type": "richtext",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": ["general", "product", "service", "shipping", "other"],
      "default": "general"
    }
  }
}

